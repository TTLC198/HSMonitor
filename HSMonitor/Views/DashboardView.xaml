    <UserControl.Resources>
        <Style
            TargetType="{x:Type Border}">
            <Setter
                Property="CornerRadius"
                Value="4"/>
            <Setter
                Property="BorderBrush"
                Value="Gray"/>
            <Setter
                Property="BorderThickness"
                Value="1"/>
        </Style>
        <Style
            TargetType="{x:Type Path}">
            <Setter
                Property="Fill"
                Value="Gray"/>
        </Style>
        <Style
            TargetType="{x:Type Polygon}">
            <Setter
                Property="Fill"
                Value="Gray"/>
        </Style>
        <Style
            TargetType="{x:Type TextBlock}">
            <Setter
                Property="FontFamily"
                Value="{StaticResource VT323}"/>
            <Setter
                Property="VerticalAlignment"
                Value="Center"/>
            <Setter
                Property="FontSize"
                Value="34"/>
            <Setter
                Property="Foreground"
                Value="White"/>
            <!--{DynamicResource MaterialDesignDarkForeground}-->
        </Style>
    </UserControl.Resources>
