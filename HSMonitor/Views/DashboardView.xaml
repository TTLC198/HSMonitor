            x:Name="Fan1LoadTextBlock"
            Canvas.Top="225"
            Canvas.Left="190"
            Text="{Binding GpuFan1.Load}"
            FontSize="14"/>
        <!--GPU Fan2 Load-->
        <TextBlock
            x:Name="Fan2TextBlock"
            Canvas.Top="240"
            Canvas.Left="125"
            Text="Fan2 Load :"
            FontSize="14"/>
        <!--GPU Fan2 Load-->
        <TextBlock
            x:Name="Fan2LoadTextBlock"
            Canvas.Top="240"
            Canvas.Left="190"
            Text="{Binding GpuFan2.Load}"
            FontSize="14"/>
