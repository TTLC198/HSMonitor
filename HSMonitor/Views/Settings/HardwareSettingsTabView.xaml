<UserControl x:Class="HSMonitor.Views.Settings.HardwareSettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:HSMonitor.ViewModels.Settings"
             xmlns:validationRules="clr-namespace:HSMonitor.Utils.ValidationRules"
             xmlns:p="clr-namespace:HSMonitor.Properties"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance Type=settings:HardwareSettingsTabViewModel}"
             Style="{DynamicResource MaterialDesignRoot}"
             mc:Ignorable="d"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,8"
                    Orientation="Vertical">

            <materialDesign:Card Margin="12,6" Padding="12">
                <StackPanel>
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="DesktopTower"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Оборудование" />
                    </DockPanel>

                    <StackPanel Margin="0,10,0,0">
                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.SelectCPUText}"
                                VerticalAlignment="Center" />
                            <ComboBox
                                Grid.Row="1"
                                ItemsSource="{Binding Processors}"
                                SelectedValue="{Binding SelectedCpu, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Name }" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.SelectGPUText}"
                                VerticalAlignment="Center" />
                            <ComboBox
                                Grid.Row="1"
                                ItemsSource="{Binding GraphicCards}"
                                SelectedValue="{Binding SelectedGpu, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Name }" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Margin="12,6" Padding="12">
                <StackPanel>
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="Speedometer"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Частоты по умолчанию" />
                    </DockPanel>

                    <StackPanel Margin="0,10,0,0">
                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.DefaultCPUFreqText}"
                                VerticalAlignment="Center" />
                            <TextBox
                                Grid.Row="1">
                                <TextBox.Text>
                                    <Binding Path="DefaultCpuFrequency"
                                             UpdateSourceTrigger="PropertyChanged"
                                             Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validationRules:IntValueRule
                                                Min="0"
                                                Max="9999"
                                                ValidatesOnTargetUpdated="True" />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>

                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.DefaultGPUFreqText}"
                                VerticalAlignment="Center" />
                            <TextBox
                                Grid.Row="1">
                                <TextBox.Text>
                                    <Binding Path="DefaultGpuFrequency"
                                             UpdateSourceTrigger="PropertyChanged"
                                             Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validationRules:IntValueRule
                                                Min="0"
                                                Max="9999"
                                                ValidatesOnTargetUpdated="True" />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>

</UserControl>