<UserControl x:Class="HSMonitor.Views.Settings.UpdateSettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:HSMonitor.ViewModels.Settings"
             xmlns:converters="clr-namespace:HSMonitor.Utils.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:hsMonitor="clr-namespace:HSMonitor"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:p="clr-namespace:HSMonitor.Properties"
             d:DataContext="{d:DesignInstance Type=settings:UpdateSettingsTabViewModel}"
             Style="{DynamicResource MaterialDesignRoot}"
             mc:Ignorable="d"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <StackPanel Loaded="{s:Action OnViewFullyLoaded}"
                    Margin="0,8"
                    Orientation="Vertical">

            <!-- ========================= -->
            <!-- CARD: APP UPDATE -->
            <!-- ========================= -->
            <materialDesign:Card Margin="12,6" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <DockPanel Grid.Row="0" LastChildFill="True">
                        <materialDesign:PackIcon Kind="Update"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Обновление приложения" />
                    </DockPanel>

                    <!-- Status -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock FontSize="14"
                                   Text="{Binding AppStatusString}" />
                        <TextBlock FontSize="12"
                                   Opacity="0.75"
                                   Text="{Binding AppVersionString}" />
                    </StackPanel>

                    <!-- Actions + Progress -->
                    <Grid
                        Grid.Column="0"
                        Grid.Row="2" Margin="0,12,0,0">
                        <!-- Progress block -->
                        <StackPanel
                            Visibility="{Binding IsAppProgressBarActive, Converter={x:Static converters:VisibilityBoolConverter.Instance}}">
                            <TextBlock FontSize="12"
                                       Opacity="0.75"
                                       Text="{Binding AppProgressStageText}" />
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ProgressBar Grid.Column="0"
                                             Height="6"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding UpdateAppDownloadPercent}" />

                                <TextBlock Grid.Column="1"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Opacity="0.75">
                                    <Run Text="{Binding UpdateAppDownloadPercent}" />
                                    <Run Text="%" />
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Buttons -->
                    <Grid
                        Grid.RowSpan="3"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button 
                            Grid.Row="0"
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                            ToolTip="{x:Static p:Resources.CheckForUpdatesTooltip}"
                            Command="{s:Action CheckAppUpdates}">
                            <materialDesign:PackIcon 
                                Kind="Refresh"
                                Width="22" 
                                Height="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Button>

                        <Button 
                            Grid.Row="1"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            IsEnabled="{Binding IsAppPrimaryActionEnabled}"
                            Command="{s:Action AppPrimaryAction}">
                            <materialDesign:PackIcon 
                                Kind="Download"
                                Width="22" Height="22"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </materialDesign:Card>


            <!-- ========================= -->
            <!-- CARD: DEVICE FIRMWARE -->
            <!-- ========================= -->
            <materialDesign:Card Margin="12,6" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <DockPanel Grid.Row="0" LastChildFill="True">
                        <materialDesign:PackIcon Kind="Usb"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Прошивка устройства" />
                    </DockPanel>

                    <!-- Status -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock FontSize="14"
                                   Text="{Binding DeviceStatusString}" />
                        <TextBlock FontSize="12"
                                   Opacity="0.75"
                                   Text="{Binding DeviceVersionString}" />
                    </StackPanel>

                    <!-- Actions + Progress -->
                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Firmware progress -->
                        <StackPanel
                            Visibility="{Binding IsDeviceProgressBarActive, Converter={x:Static converters:VisibilityBoolConverter.Instance}}">
                            <TextBlock FontSize="12"
                                       Opacity="0.75"
                                       Text="{Binding DeviceProgressStageText}" />
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ProgressBar Grid.Column="0"
                                             Height="6"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding UpdateDeviceDownloadPercent}" />

                                <TextBlock Grid.Column="1"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Opacity="0.75">
                                    <Run Text="{Binding UpdateDeviceDownloadPercent}" />
                                    <Run Text="%" />
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <Grid
                        Grid.RowSpan="4"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button 
                            Grid.Row="0"
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                            ToolTip="Проверить обновление прошивки"
                            Command="{s:Action CheckDeviceUpdates}" >
                            <materialDesign:PackIcon 
                                Kind="Refresh"
                                Width="22" 
                                Height="22"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                        </Button>

                        <Button 
                            Grid.Row="1"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            ToolTip="{Binding DevicePrimaryActionTooltip}"
                            IsEnabled="{Binding IsDevicePrimaryActionEnabled}"
                            Command="{s:Action DevicePrimaryAction}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                            <materialDesign:PackIcon 
                                Kind="Download"
                                Width="22" Height="22"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                        </Button>
                    </Grid>
                </Grid>
            </materialDesign:Card>


            <!-- ========================= -->
            <!-- LINK: GITHUB -->
            <!-- ========================= -->
            <materialDesign:Card Margin="12,6" Padding="12">
                <DockPanel>
                    <materialDesign:PackIcon Kind="Github"
                                             Width="22" Height="22"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0" />

                    <StackPanel>
                        <TextBlock Text="{x:Static p:Resources.ProjectURLText}" />

                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                HorizontalAlignment="Left"
                                Padding="0"
                                ToolTip="Github URL"
                                Command="{s:Action GithubLinkPageOpen}">
                            <TextBlock FontSize="12" FontWeight="SemiBold">
                                <Run Text="{x:Static hsMonitor:App.GitHubProjectUrl}" />
                                <Run Text="  ↗" />
                            </TextBlock>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>