<UserControl x:Class="HSMonitor.Views.Settings.ConnectionSettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:HSMonitor.ViewModels.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validationRules="clr-namespace:HSMonitor.Utils.ValidationRules"
             xmlns:p="clr-namespace:HSMonitor.Properties"
             xmlns:s="https://github.com/canton7/Stylet"
             d:DataContext="{d:DesignInstance Type=settings:ConnectionSettingsTabViewModel}"
             Style="{DynamicResource MaterialDesignRoot}"
             mc:Ignorable="d"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,8"
                    Orientation="Vertical">

            <materialDesign:Card Margin="12,6" Padding="12">
                <StackPanel>
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="Usb"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Подключение" />
                    </DockPanel>

                    <StackPanel Margin="0,10,0,0">

                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.SerialPortText}"
                                VerticalAlignment="Center" />
                            <ComboBox
                                Grid.Row="1"
                                ItemsSource="{Binding AvailablePorts}"
                                SelectedValue="{Binding SelectedDevice, Mode=TwoWay}"
                                materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                                DropDownOpened="{s:Action UpdateAvailablePorts}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run
                                                Text="{Binding PortName}" />
                                            <Run
                                                Text=" - " />
                                            <Run
                                                Text="{Binding BusDescription}" />
                                            <TextBlock.Resources>
                                                <Style
                                                    TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding IsHsMonitorData}"
                                                            Value="True">
                                                            <Setter
                                                                Property="FontWeight"
                                                                Value="Bold" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Resources>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.BaudRateText}"
                                VerticalAlignment="Center" />
                            <ComboBox
                                Grid.Row="1"
                                ItemsSource="{Binding SupportedBaudRates}"
                                SelectedValue="{Binding SelectedBaudRate, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=.}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Margin="12,6" Padding="12">
                <StackPanel>
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="Send"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Передача данных" />
                    </DockPanel>

                    <StackPanel Margin="0,10,0,0">
                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="{x:Static p:Resources.TXIntervalText}"
                                VerticalAlignment="Center" />
                            <TextBox
                                Grid.Row="1">
                                <TextBox.Text>
                                    <Binding Path="SendInterval"
                                             UpdateSourceTrigger="PropertyChanged"
                                             Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validationRules:IntValueRule
                                                Min="500"
                                                Max="9999"
                                                ValidatesOnTargetUpdated="True" />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Margin="12,6" Padding="12">
                <StackPanel>
                    <DockPanel LastChildFill="True">
                        <materialDesign:PackIcon Kind="Brightness6"
                                                 Width="22" Height="22"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Opacity="0.9" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Экран устройства" />
                    </DockPanel>

                    <StackPanel Margin="0,10,0,0">
                        <Grid Margin="0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Orientation="Horizontal">
                                <TextBlock
                                    Text="{x:Static p:Resources.DisplayBrightnessText}"
                                    VerticalAlignment="Center" />
                                <TextBox
                                    Margin="2"
                                    materialDesign:ValidationAssist.HasError="False">
                                    <TextBox.Text>
                                        <Binding Path="DeviceDisplayBrightness"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Mode="TwoWay">
                                            <Binding.ValidationRules>
                                                <validationRules:IntValueRule
                                                    Min="10"
                                                    Max="100"
                                                    ValidatesOnTargetUpdated="True" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>
                            <Slider
                                Grid.Row="1"
                                Margin="2"
                                IsSnapToTickEnabled="True"
                                LargeChange="10"
                                Maximum="100"
                                Minimum="10"
                                SmallChange="1"
                                TickFrequency="10"
                                Style="{DynamicResource MaterialDesignThinSlider}"
                                Value="{Binding DeviceDisplayBrightness}" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>

</UserControl>